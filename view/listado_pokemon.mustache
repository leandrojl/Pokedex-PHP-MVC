<div class="flex-grow-1 ">
    <div class="container mt-5 mb-5 bg-light">
        <div class="text-center p-3">
            <h2>Pokedex</h2>
        </div>

        <div class="row">
            {{#pokedex}}
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                    <div class="card h-100 shadow-sm bg-light">
                        <!-- Imagen principal del PokÃ©mon -->
                        <img src="public/imagenes/{{imagen}}.png" class="card-img-top img-fluid" style="height: 200px; object-fit: contain;" alt="">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{nombre}}</h5>
                            <p class="card-text"></p>
                            <img src="public/imagenes/{{tipo_descripcion}}.png" class="img-fluid mt-auto" style="height: 50px; width: 50px; object-fit: contain;" alt="">
                        </div>
                        <div class="d-flex justify-content-between mt-3">
                            <!-- Formulario para modificar o eliminar -->
                            <form action="index.php" method="GET" class="d-inline">
                                <input type="hidden" name="pokemon_id" value="{{id}}">
                                <button type="submit" name="action" value="modificar" class="btn btn-info">Modificar</button>
                                <button type="submit" name="action" value="eliminarPokemon" class="btn btn-danger">Eliminar</button>
                            </form>
                        </div>
                    </div>
                </div>
            {{/pokedex}}
        </div>
    </div>
</div>