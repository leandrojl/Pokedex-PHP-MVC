<div class="flex-grow-1 ">
    <div class="container mt-5 mb-5 bg-light">
        <div class="text-center p-3">
            <h2>Pokedex</h2>
        </div>
        <div class="container mt-3">
            <form action="/pokedex/buscarPokemon" method="GET" class="row g-2">
                <div class="col-12 col-md-8">

                    <input type="text" name="busqueda" class="form-control" placeholder="Buscar..." aria-label="Buscar" required>
                </div>
                <div class="col-12 col-md-4">
                    <button type="submit" class="btn btn-primary w-100">Buscar</button>
                </div>
            </form>
        </div>


        <div class="row">
            {{#pokedex}}
                <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                    <div class="card h-100 shadow-sm bg-light">
                        <!-- Imagen principal del PokÃ©mon -->
                        <img src="{{imagen}}" class="card-img-top img-fluid" style="height: 200px; object-fit: contain;" alt="">
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{nombre}}</h5>
                            <p class="card-text"></p>
                            <img src="{{tipo_descripcion}}" class="img-fluid mt-auto" style="height: 50px; width: 50px; object-fit: contain;" alt="">
                        </div>
                        <div class="d-flex justify-content-between mt-3">
                            <!-- Formulario para modificar o eliminar -->
                            <form action="index.php" method="GET" class="d-inline">
                                <input type="hidden" name="page" value="pokedex">
                                <input type="hidden" name="pokemon_id" value="{{id}}">
                                <button type="submit" name="action" value="modificarPokemon" class="btn btn-info">Modificar</button>
                            </form>

                            <form action="/pokedex/eliminarPokemon" method="GET" class="d-inline">
                                <button type="submit" class="btn btn-danger" name="pokemon_id" value="{{id}}">Eliminar</button>
                            </form>

                        </div>
                    </div>
                </div>
            {{/pokedex}}
        </div>
    </div>
</div>